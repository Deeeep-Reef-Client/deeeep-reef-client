{
  "name": "deeeep-reef-client",
  "productName": "Deeeep.io Reef Client",
  "version": "0.3.0",
  "description": "A new desktop client for Deeeep.io",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "npx electron-builder build",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [
    "deeeep",
    "client"
  ],
  "author": {
    "name": "Canned Tuna",
    "email": "101097344+Canned-Seagull23@users.noreply.github.com"
  },
  "license": "GPL-3.0",
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          ".ts$"
        ],
        "icon": "src/favicon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "deeeep_reef_client"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "build": {
    "productName": "Deeeep.io Reef Client",
    "appId": "deeeepio.reefclient",
    "files": [
      "package.json",
      "src/**.js",
      "build/**"
    ],
    "extraResources": [
      "extensions/**"
    ],
    "directories": {
      "buildResources": "build"
    },
    "nsis": {
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "asar": false
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-chrome-extensions": "^3.9.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.64",
    "@electron-forge/maker-deb": "^6.0.0-beta.64",
    "@electron-forge/maker-rpm": "^6.0.0-beta.64",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.64",
    "@electron-forge/maker-zip": "^6.0.0-beta.64",
    "electron": "20.0.1",
    "electron-builder": "^23.3.3"
  }
}
