{
  "name": "deeeep-reef-client",
  "productName": "Deeeep.io Reef Client",
  "version": "0.9.1",
  "description": "A new desktop client for Deeeep.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/Deeeep-Reef-Client/deeeep-reef-client.git"
  },
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "tsc && npm exec electron-builder build",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [
    "deeeep",
    "client"
  ],
  "author": {
    "name": "Canned Tuna",
    "email": "101097344+Canned-Seagull23@users.noreply.github.com"
  },
  "license": "GPL-3.0",
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          ".ts$"
        ],
        "icon": "src/favicon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "deeeep_reef_client"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "build": {
    "productName": "Deeeep.io Reef Client",
    "appId": "deeeepio.reefclient",
    "files": [
      "package.json",
      "src/**.js",
      "build/**",
      "src/loading.html",
      "!src/tmp**"
    ],
    "extraResources": [
      "extensions/**"
    ],
    "directories": {
      "buildResources": "build"
    },
    "nsis": {
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "asar": false
  },
  "dependencies": {
    "bad-words": "^3.0.4",
    "discord-rpc": "^4.0.1",
    "discord.js": "^14.7.1",
    "electron-chrome-extensions": "^3.9.0",
    "electron-dl": "^3.4.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "jotform-css.js": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.64",
    "@electron-forge/maker-deb": "^6.0.0-beta.64",
    "@electron-forge/maker-rpm": "^6.0.0-beta.64",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.64",
    "@electron-forge/maker-zip": "^6.0.0-beta.64",
    "electron": "20.0.1",
    "electron-builder": "^23.3.3"
  }
}
